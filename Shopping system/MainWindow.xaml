<Window x:Class="Shopping_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_system.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:MultiConverter x:Key="multiConverter"></local:MultiConverter>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="mailTB" Text="email" HorizontalAlignment="Left" Height="24" Margin="342,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordTB" Password="123" HorizontalAlignment="Left" Margin="342,270,0,0" VerticalAlignment="Top"/>
        <Button Command="{Binding currentCommand}" Content="log" HorizontalAlignment="Left" Margin="364,336,0,0" VerticalAlignment="Top" Width="76" RenderTransformOrigin="-0.625,1.35">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource multiConverter}">
                    <Binding ElementName="mailTB"/>
                    <Binding ElementName="passwordTB"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
    </Grid>
</Window>